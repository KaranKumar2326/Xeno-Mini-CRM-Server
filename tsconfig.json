{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",  // ← Critical for Node.js
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "types": ["node"]  // ← Node.js type definitions
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules"]
}